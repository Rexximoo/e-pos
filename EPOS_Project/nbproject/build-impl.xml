<?xml version="1.0" encoding="UTF-8"?>
<project name="EPOS_Project-impl" default="default" basedir="..">
    <target name="default" depends="compile"/>
    
    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" includeantruntime="false">
            <classpath>
                <fileset dir="lib">
                    <include name="**/*.jar"/>
                </fileset>
            </classpath>
        </javac>
    </target>
    
    <target name="run" depends="compile">
        <java classname="epos.view.LoginForm" fork="true">
            <classpath>
                <pathelement path="build/classes"/>
                <fileset dir="lib">
                    <include name="**/*.jar"/>
                </fileset>
            </classpath>
        </java>
    </target>
    
    <target name="clean">
        <delete dir="build"/>
        <delete dir="dist"/>
    </target>
</project>
